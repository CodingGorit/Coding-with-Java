<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.gorit.entity.DbUserEntity" table="db_user" schema="test">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="status">
            <column name="status" sql-type="tinyint(2)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>